<div class="list-card bg-white shadow rounded-lg p-4">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="font-bold text-lg"><%= attendance_list.title %></h3>
      <p class="text-gray-600">
        <%= l attendance_list.date, format: :long %> - 
        <%= attendance_list.list_type.humanize %>
      </p>
    </div>
    
    <div class="stats text-right">
      <span class="font-bold"><%= attendance_list.attendances.count %></span>
      <span class="text-gray-600">présents</span>
    </div>
  </div>

  <% if attendance_list.description.present? %>
    <p class="mt-2 text-gray-700"><%= attendance_list.description %></p>
  <% end %>

  <div class="mt-4 flex justify-between items-center text-sm text-gray-500">
    <span>
      Créé par <%= attendance_list.created_by.name %>
      <%= attendance_list.automatic? ? "(automatique)" : "" %>
    </span>
    
    <div class="actions">
      <%= link_to "Voir les présents", 
                  volunteer_attendance_list_path(attendance_list),
                  class: "link" %>
    </div>
  </div>
</div> 